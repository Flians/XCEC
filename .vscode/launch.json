    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb_ubuntu_Attach",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/XCEC",
            "args": [
                "./test/cases/case1/gf.v",
                "./test/cases/case1/rf.v",
                "./test/output/output_case1.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_mac"
        },
        {
            "name": "lldb_mac_launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/XCEC",
            "args": [
                "./test/cases/case3/gf.v",
                "./test/cases/case3/rf.v",
                "./test/output/output_case3.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_mac"
        },
        {
            "name": "gdb_win_launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/XCEC.exe",
            "args": [
                "./test/golden/gf.v",
                "./test/revise/rf.v",
                "./output/output.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "internalConsoleOptions": "openOnFirstSessionStart",
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_win"
        }
    ]
}